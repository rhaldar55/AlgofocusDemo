<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:orientation="vertical"
    tools:context=".Activity.UserDetailsActivity">

    <RelativeLayout
        android:id="@+id/top_rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/cover" />

        <Button
            android:onClick="logOut"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Log Out"
            android:background="@drawable/btn_red_corner_bg"
            android:layout_alignParentRight="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic_id"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:src="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/user_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_pic_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_rl_layout"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userid_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/first_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="First Name"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mid_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Middle Name"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/last_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Last Name"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/linkuri_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Link URI"
            android:textColor="@color/blue"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/getAddress"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:padding="6dp"
        android:background="@drawable/location_btn"
        android:text="Get Current Location" />

    <TextView
        android:id="@+id/lati_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/green" />

    <TextView

        android:id="@+id/longi_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/green" />

    <TextView
        android:id="@+id/locationtv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorAccent" />

</LinearLayout>